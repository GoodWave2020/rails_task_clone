<div class="container">
<h3 class = "title">以下の内容で、送信する。</h3>
<%= form_with(model: @post, local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p class = "confirm">投稿内容 <br>
    <%= @post.content %>
  </p>
  <%= form.submit  "投稿" %>
  <%= form.submit "戻る", name: "back" %>
<% end %>
</div>
