<div class="container">
<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= @post.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div class="post_content">
    <%= form.label "投稿内容" %><br>
    <%= form.text_area :content, class: "text_field" %>
  </div>
  <%= form.submit "投稿", class: "submit-btn" %>
<% end %>
<%= link_to "投稿一覧へ", posts_path%>
</div>
